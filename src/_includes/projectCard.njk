<a class="flex flex-col gap-y-2 p-6 rounded-lg transition-all border-2 border-surface hover:border-surface-hover{% if project.featured %} md:col-span-2{% endif %}" href="https://github.com/{{ project.github }}">
  <h4 class="font-bold font-display text-xl">
    {{ project.name }}
  </h4>
  <p class="text-opacity-90">
    {{ project.description }}
  </p>
  {% if project.tags.length %}
    <div class="flex flex-wrap mt-4 gap-x-2 gap-y-1">
      {% for tag in project.tags %}
        <span class="inline-block px-2 py-1 text-xs font-medium rounded-full bg-surface">
          {{ tag }}
        </span>
      {% endfor %}
    </div>
  {% endif %}
</a>

