{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "composite": true,
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"],
}
