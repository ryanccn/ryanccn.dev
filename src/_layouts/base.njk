---
navLinks:
  - title: Projects
    url: /projects/
    icon: lucide:album
    accesskey: p
  - title: Uses
    url: /uses/
    icon: lucide:bookmark
    accesskey: u
  - title: Blog
    url: /posts/
    icon: lucide:pencil
    accesskey: b

eleventyComputed:
  socialImg: "{{ domain }}/previews/{{ title | slugify }}.png"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% if title !== "Ryan Cao" %}{{ title }} &middot; {% endif %}Ryan Cao</title>

    {% if inProduction %}
    <script async defer data-domain="ryanccn.dev" data-api="/sus/event" src="/sus/script.js"></script>
    {% endif %}
    <script nonce="{{ nonces.script }}">{{ inlinedScript | safe }}</script>
    <style>{{ inlinedStyles.fonts | safe }}</style>

    <link rel="stylesheet" href="/assets/styles.css?v={{ gitRev }}">
    <link rel="preload" as="style" href="/assets/styles.css?v={{ gitRev }}">
    <link rel="preload" as="font" type="font/woff2" crossorigin="anonymous" href="/fonts/inter/inter-roman-latin.woff2?v=2a440841">

    <link rel="icon" href="/icons/favicon.svg?v={{ gitRev }}">
    <link rel="apple-touch-icon" href="/icons/background.png?v={{ gitRev }}">
    <link rel="canonical" href="https://ryanccn.dev{{ page.url }}">

    <link rel="alternate" type="application/rss+xml" href="https://ryanccn.dev/feed/rss.xml">
    <link rel="alternate" type="application/atom+xml" href="https://ryanccn.dev/feed/atom.xml">
    <link rel="authorization_endpoint" href="https://indielogin.com/auth">

    {% set description_ = description or "High school student and open source developer." %}

    <meta name="title" content="{{ title }}">
    <meta name="description" content="{{ description_ }}">

    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Ryan Cao">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description_ }}">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@RyanCaoDev">
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{{ description_ }}">

    <meta property="og:image" content="https://ryanccn.dev/og/{{ title | slugify }}.png?v={{ gitRev }}">
    <meta property="og:image:width" content="2400" />
    <meta property="og:image:height" content="1260" />
    <meta name="twitter:image" content="https://ryanccn.dev/og/{{ title | slugify }}.png?v={{ gitRev }}">
  </head>

  <body>
    <header class="flex flex-col gap-y-10 md:w-72 shrink-0">
      <a href="/" class="h-card relative group flex self-start mb-1" title="Ryan Cao">
        {% icon "custom:me", class="absolute top-0 left-0 w-8 h-auto text-surface group-hover:text-surface-hover transition-colors z-10", "aria-hidden"="true" %}
        {% icon "custom:me", class="w-8 h-auto animate-me-icon text-fg hover:text-accent transition-colors z-20" %}
      </a>

      <div class="flex flex-col gap-y-4">
        {% asyncAll link in navLinks %}
        <a
          href="{{ link.url }}"
          class="flex flex-row gap-x-2 items-center text-base rounded-sm font-bold tracking-tight transition-colors {% if link.url === page.url -%} text-accent {%- else -%} text-fg hover:text-accent {%- endif %}"
          {% if link.accesskey %}accesskey="{{ link.accesskey }}"{% endif %}
        >
          {% icon link.icon, class='block size-4 shrink-0' %}
          <span>{{ link.title }}</span>
        </a>
        {% endall %}
      </div>

      <div class="flex items-center flex-wrap gap-1.5">
        <a rel="me noreferrer" href="https://c.ryanccn.dev/@ryan" class="rounded p-1.5 hover:brightness-90" title="Firefish">
          {% icon "custom:firefish", class="block size-5 z-20" %}
        </a>
        <a rel="me noreferrer authn" href="https://github.com/ryanccn" class="rounded p-1.5 hover:brightness-90" title="GitHub">
          {% icon "simpleicon:github", class="block size-5 text-brand-github dark:text-white" %}
        </a>
        <a rel="me noreferrer" href="https://x.com/RyanCaoDev" class="rounded p-1.5 hover:brightness-90" title="Twitter">
          {% icon "simpleicon:x", class="block size-5 scale-90 text-black dark:text-white" %}
        </a>
        <a rel="me noreferrer" href="https://www.threads.net/@ryanccn.dev" class="rounded p-1.5 hover:brightness-90" title="Threads">
          {% icon "simpleicon:threads", class="block size-5 text-brand-threads dark:text-white" %}
        </a>
        <a rel="noreferrer" href="https://discord.gg/ty7GCnN87U" class="rounded p-1.5 hover:brightness-90" title="Discord">
          {% icon "simpleicon:discord", class="block size-5 text-brand-discord" %}
        </a>
        <a rel="me noreferrer" href="https://modrinth.com/user/ryanccn" class="rounded p-1.5 hover:brightness-90" title="Modrinth">
          {% icon "simpleicon:modrinth", class="block size-5 text-brand-modrinth" %}
        </a>
        <a rel="me noreferrer" href="https://ko-fi.com/ryancaodev" class="rounded p-1.5 hover:brightness-90" title="Ko-fi">
          {% icon "simpleicon:kofi", class="block size-5 text-brand-kofi" %}
        </a>
      </div>

      <div class="relative flex flex-row self-start items-center -mt-4 text-sm font-medium bg-surface hover:bg-surface-hover transition-all rounded" data-theme-select>
        {% icon 'lucide:palette', class='block size-4 ml-3 my-2 shrink-0', 'aria-hidden'='true' %}

        <select aria-label="Select a theme" class="-ml-7 py-2 pl-9 pr-3 appearance-none bg-transparent" accesskey="t">
          <option value="light">Default Light</option>
          <option value="dark">Default Dark</option>
          <option value="flexoki-light">Flexoki Light</option>
          <option value="flexoki-dark">Flexoki Dark</option>
          <option value="rose-pine">Rosé Pine</option>
          <option value="rose-pine-moon">Rosé Pine Moon</option>
          <option value="rose-pine-dawn">Rosé Pine Dawn</option>
          <option value="ctp-latte">Catppuccin Latte</option>
          <option value="ctp-frappe">Catppuccin Frappé</option>
          <option value="ctp-macchiato">Catppuccin Macchiato</option>
          <option value="ctp-mocha">Catppuccin Mocha</option>
          <option value="nord-light">Nord Light</option>
          <option value="nord-dark">Nord Dark</option>
        </select>
      </div>

      <div class="flex-col gap-y-2 hidden md:flex">
        <div class="flex flex-row gap-x-1 text-xs">
          <a class="text-fg-dimmed hover:text-fg-less-dimmed transition-colors" href="https://xn--sr8hvo.ws/%F0%9F%8C%86%C2%A9%EF%B8%8F%F0%9F%99%89/previous">←</a>
          <a class="text-fg-dimmed hover:text-fg-less-dimmed transition-colors" href="https://xn--sr8hvo.ws">IndieWeb Webring</a>
          <a class="text-fg-dimmed hover:text-fg-less-dimmed transition-colors" href="https://xn--sr8hvo.ws/%F0%9F%8C%86%C2%A9%EF%B8%8F%F0%9F%99%89/next">→</a>
        </div>

        <a class="text-xs text-balance text-fg-dimmed hover:text-fg-less-dimmed transition-colors" href="https://github.com/ryanccn/ryanccn.dev/blob/main/{{ page.inputPath }}">
          Code licensed under MIT, content licensed under CC BY-SA 4.0
        </a>
      </div>
    </header>

    <main class="flex flex-col overflow-x-hidden">
      {{ content | safe }}
    </main>

    <footer class="flex flex-col gap-y-2 md:hidden mt-20">
      <div class="flex flex-row gap-x-1 text-xs">
        <a class="text-fg-dimmed hover:text-fg-less-dimmed transition-colors" href="https://xn--sr8hvo.ws/%F0%9F%8C%86%C2%A9%EF%B8%8F%F0%9F%99%89/previous">←</a>
        <a class="text-fg-dimmed hover:text-fg-less-dimmed transition-colors" href="https://xn--sr8hvo.ws">IndieWeb Webring</a>
        <a class="text-fg-dimmed hover:text-fg-less-dimmed transition-colors" href="https://xn--sr8hvo.ws/%F0%9F%8C%86%C2%A9%EF%B8%8F%F0%9F%99%89/next">→</a>
      </div>

      <a class="text-xs text-fg-dimmed hover:text-fg-less-dimmed transition-colors" href="https://github.com/ryanccn/ryanccn.dev/blob/main/{{ page.inputPath }}">
        Code licensed under MIT, content licensed under CC BY-SA 4.0
      </a>
    </footer>
  </body>
</html>
