---
navLinks:
  - title: Projects
    url: /projects/
    icon: lucide:album
  - title: Uses
    url: /uses/
    icon: lucide:bookmark
  - title: Blog
    url: /posts/
    icon: lucide:pencil

eleventyComputed:
  socialImg: "{{ domain }}/previews/{{ title | slugify }}.png"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% if title !== "Ryan Cao" %}{{ title }} &middot; {% endif %}Ryan Cao</title>

    <script>{{ inlinedScript | safe }}</script>

    <link rel="stylesheet" href="/assets/tailwind.css?v={{ gitRev }}">
    <link rel="stylesheet" href="/assets/prism.css?v={{ gitRev }}">

    <link rel="preload" as="font" type="font/woff2" href="/assets/fonts/public-sans/PublicSans.woff2?v=20230602" crossorigin="anonymous" />

    <script>{{ inlinedScript | safe }}</script>

    {% if inProduction %}
    <script
      defer
      data-domain="ryanccn.dev"
      data-api="/sus/event"
      src="/sus/script.js"
    ></script>
    {% endif %}

    <link rel="icon" href="/icons/v2-rounded.png?v={{ gitRev }}">
    <link rel="apple-touch-icon" href="/icons/v2-180w.png?v={{ gitRev }}">
    <link rel="canonical" href="https://ryanccn.dev{{ page.url }}">

    <link
      rel="alternate"
      type="application/rss+xml"
      href="https://ryanccn.dev/feed/rss.xml"
    >
    <link
      rel="alternate"
      type="application/atom+xml"
      href="https://ryanccn.dev/feed/atom.xml"
    >
    <link rel="webmention" href="https://webmention.io/ryanccn.dev/webmention">
    <link rel="pingback" href="https://webmention.io/ryanccn.dev/xmlrpc">

    <meta name="title" content="{{ title }}">
    <meta name="description" content="A blog on web development, etc.">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="A blog on web development, etc.">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:creator" content="@RyanCaoDev">
    <meta name="twitter:title" content="{{ title }}">
    <meta property="og:image" content="{{ socialImg }}">
    <meta name="twitter:image" content="{{ socialImg }}">
  </head>

  <body>
    <header
      class="flex flex-col md:flex-row md:justify-between md:items-center md:px-6 py-16 md:mb-12 gap-y-10 md:gap-y-0"
    >
      <a href="/" class="h-card flex gap-x-3 items-center md:px-3 py-2 my-1 transition rounded-sm">
        {% include 'pictureOfMe.njk' %}
        <span class="p-name tracking-tight leading-none text-2xl font-bold">Ryan Cao</span>
      </a>

      <div class="flex flex-col gap-y-2 md:flex-row md:items-center md:gap-x-4 md:gap-y-0">
        {% asyncAll link in navLinks %}
        <a
          href="{{ link.url }}"
          class="flex flex-row gap-x-3 items-center text-lg md:px-3 py-1 rounded-sm font-semibold transition {% if link.url === page.url -%} text-accent {%- else -%} link {%- endif %}"
        >
          {% icon link.icon, class='block w-5 h-5' %}
          <span>{{ link.title }}</span>
        </a>
        {% endall %}
      </div>

      <div class="flex flex-row gap-x-2 items-center fixed bottom-0 right-0 m-2 px-3 py-2 text-sm font-medium bg-surface rounded" data-theme-toggle>
        {% icon 'lucide:palette', class='block h-4 w-4' %}
        <span>&nbsp;</span>

        <select class="absolute inset-0 opacity-0 cursor-default hover:cursor-pointer">
          <option value="light">Default Light</option>
          <option value="dark">Default Dark</option>
          <option value="ctp-latte">Catppuccin Latte</option>
          <option value="ctp-frappe">Catppuccin Frappé</option>
          <option value="ctp-macchiato">Catppuccin Macchiato</option>
          <option value="ctp-mocha">Catppuccin Mocha</option>
          <option value="nord-light">Nord Light</option>
          <option value="nord-dark">Nord Dark</option>
          <option value="pink-light">Pink Light</option>
          <option value="pink-dark">Pink Dark</option>
          <option value="rose-pine">Rosé Pine</option>
          <option value="rose-pine-moon">Rosé Pine Moon</option>
          <option value="rose-pine-dawn">Rosé Pine Dawn</option>
        </select>
      </div>
    </header>

    <main class="flex flex-col w-full max-w-[80ch] mx-auto">
      {{ content | safe }}
    </main>

    <footer
      class="mt-36 flex flex-col items-center gap-y-4 w-full self-center"
    >
      <div class="flex items-center gap-3 mb-4">
        <a rel="me noreferrer" href="https://ck.ryanccn.dev/@me" class="rounded p-1 hover:brightness-90 transition-all focus:ring-brand-mastodon/30">
          {% icon "simpleicon:mastodon", class="block h-5 w-5 text-brand-mastodon" %}
        </a>
        <a rel="me noreferrer" href="https://blobfox.coffee/@RyanCaoDev" class="rounded p-1 hover:brightness-90 transition-all focus:ring-brand-mastodon/30 saturate-0">
          {% icon "simpleicon:mastodon", class="block h-5 w-5 text-brand-mastodon" %}
        </a>
        <a rel="me noreferrer" href="https://github.com/ryanccn" class="rounded p-1 hover:brightness-90 transition-all focus:ring-brand-github/30 dark:focus:ring-white/30">
          {% icon "simpleicon:github", class="block h-5 w-5 text-brand-github dark:text-white" %}
        </a>
        <a rel="me noreferrer" href="https://twitter.com/RyanCaoDev" class="rounded p-1 hover:brightness-90 transition-all focus:ring-brand-twitter/30">
          {% icon "simpleicon:twitter", class="block h-5 w-5 text-brand-twitter" %}
        </a>
        <a rel="noreferrer" href="https://discord.gg/ty7GCnN87U" class="rounded p-1 hover:brightness-90 transition-all focus:ring-brand-discord/30">
          {% icon "simpleicon:discord", class="block h-5 w-5 text-brand-discord" %}
        </a>
        <a rel="noreferrer" href="https://modrinth.com/user/ryanccn" class="rounded p-1 hover:brightness-90 transition-all focus:ring-brand-modrinth/30">
          {% icon "simpleicon:modrinth", class="block h-5 w-5 text-brand-modrinth" %}
        </a>
        <a rel="me noreferrer" href="https://ko-fi.com/ryancaodev" class="rounded p-1 hover:brightness-90 transition-all focus:ring-brand-kofi/30">
          {% icon "simpleicon:kofi", class="block h-5 w-5 text-brand-kofi" %}
        </a>
      </div>
      <div class="flex flex-row gap-x-2 text-xs text-fg-dimmed">
        <a href="https://xn--sr8hvo.ws/%F0%9F%8C%86%C2%A9%EF%B8%8F%F0%9F%99%89/previous">←</a>
        <a href="https://xn--sr8hvo.ws">IndieWeb Webring</a>
        <a href="https://xn--sr8hvo.ws/%F0%9F%8C%86%C2%A9%EF%B8%8F%F0%9F%99%89/next">→</a>
      </div>
      <a class="text-xs text-center block text-fg-dimmed max-w-[30ch] hover:text-fg-less-dimmed transition-colors" href="https://github.com/ryanccn/ryanccn.dev/blob/main/{{ page.inputPath }}">
        Code licensed under MIT, content licensed under CC BY-SA 4.0
      </a>
    </footer>
  </body>
</html>
