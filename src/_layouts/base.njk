---
navLinks:
  - title: Projects
    url: /projects/
  - title: Blog
    url: /posts/

eleventyComputed:
  socialImg: "{{ domain }}/previews/{{ title | slugify }}.png"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title }}</title>
    <link rel="icon" href="/icons/transparent.png" />
    <link rel="apple-touch-icon" href="/icons/solid.png" />
    <link rel="canonical" href="https://ryanccn.dev{{ page.url }}" />
    <meta name="title" content="{{ title }}" />
    <meta name="description" content="A blog on web development, etc." />

    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="A blog on web development, etc." />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@RyanCaoDev" />
    <meta name="twitter:title" content="{{ title }}" />
    <meta property="og:image" content="{{ socialImg }}" />
    <meta name="twitter:image" content="{{ socialImg }}" />

    <link rel="stylesheet" href="/assets/tailwind.css?v={{ gitRev }}" />
    <style>{{ fontStyles | safe }}</style>

    <link rel="preload" as="font" type="font/woff2" href="/assets/fonts/satoshi/Satoshi-Variable.latin.woff2?v=20221229" crossorigin="anonymous" />
    <link rel="preload" as="font" type="font/woff2" href="/assets/fonts/plex/IBMPlexSansVar-Roman.latin.woff2?v=20221229" crossorigin="anonymous" />

    {% if includePrismCSS %}
    <link rel="stylesheet" href="/assets/prism.css?v={{ gitRev }}" />
    {% endif %}

    <script>{{ inlinedScript | safe }}</script>

    {% if inProduction %}
    <script
      defer
      data-domain="ryanccn.dev"
      data-api="/sus/event"
      src="/sus/script.js"
    ></script>
    {% endif %}
  </head>

  <body>
    <header
      class="flex flex-col md:flex-row md:justify-between md:items-center mb-16 md:mb-32 md:px-3 pt-12 pb-2 gap-y-6 md:gap-y-0"
    >
      <a href="/" class="font-display text-2xl font-extrabold md:px-2 py-1 my-1 transition rounded-sm">
        <h1>Ryan Cao</h1>
      </a>

      <div class="flex flex-col md:flex-row md:gap-x-8 gap-y-4 md:items-center">
        <div class="flex flex-col gap-y-1 md:flex-row md:items-center md:gap-x-4 md:gap-y-0">
          {% for link in navLinks %}
          <a
            href="{{ link.url }}"
            class="text-lg md:px-2 py-1 rounded-sm font-medium transition {% if link.url === page.url -%} text-accent {%- else -%} link-colors {%- endif %}"
          >
            {{ link.title }}
          </a>
          {% endfor %}
        </div>

        <div class="flex items-center gap-2">
          <a rel="me" href="https://blobfox.coffee/@RyanCaoDev" class="rounded p-1 hover:brightness-90 transition-all">
            {% simpleicon "mastodon", "block h-5 w-5 fill-mastodon" %}
          </a>
          <a rel="me" href="https://github.com/ryanccn" class="rounded p-1 hover:brightness-90 transition-all">
            {% simpleicon "github", "block h-5 w-5 fill-github dark:fill-white" %}
          </a>
          <a rel="me" href="https://twitter.com/RyanCaoDev" class="rounded p-1 hover:brightness-90 transition-all">
            {% simpleicon "twitter", "block h-5 w-5 fill-twitter" %}
          </a>
          <a href="https://discord.com/invite/ty7GCnN87U" class="rounded p-1 hover:brightness-90 transition-all">
            {% simpleicon "discord", "block h-5 w-5 fill-discord" %}
          </a>
          <a rel="me" href="https://ko-fi.com/ryancaodev" class="rounded p-1 hover:brightness-90 transition-all">
            {% simpleicon "kofi", "block h-5 w-5 fill-kofi" %}
          </a>
        </div>
      </div>
    </header>

    <main class="flex flex-col w-full max-w-[75ch] mx-auto">
      {{ content | safe }}
    </main>

    <footer
      class="text-fg-dimmed mt-24 flex flex-col items-center gap-y-4 w-full max-w-[30ch] self-center text-center text-xs"
    >
      <button type="button" data-theme-toggle aria-label="Change theme" class="rounded px-2 py-1 before:content-['Theme:'] before:mr-1">
        &nbsp;
      </button>

      <a class="hover:text-fg-less-dimmed transition-colors" href="https://github.com/ryanccn/ryanccn.dev/blob/main/{{ page.inputPath }}">
        Code licensed under MIT, content licensed under CC BY-SA 4.0
      </a>
    </footer>
  </body>
</html>
