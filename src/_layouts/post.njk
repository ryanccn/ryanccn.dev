---
layout: 'base'
---

<article class="prose enhanced-prose font-prose mb-16">
  <h1>{{ title }}</h1>

  <div class="not-prose mb-10 font-sans flex flex-col gap-y-1">
    <p class="text-lg font-medium text-fg-dimmed">By <span class="font-semibold text-fg-brighter ">Ryan Cao</span></p>
    <p class="text-lg font-medium text-fg-dimmed">Published on <span class="font-semibold text-fg-brighter ">{{ date | customDateFormat }}</span></p>
  </div>

  {% include 'outdatedWarning.njk' %}
  {{ content | safe }}
</article>

<div class="flex flex-row items-center gap-2 mb-3 text-fg-dimmed text-sm">
  {% icon "simpleicon:creativecommons", class="block size-4 text-fg shrink-0" %}
  <p>Licensed under <a class="font-semibold plain-link" href="https://creativecommons.org/licenses/by-sa/4.0/">CC BY-SA 4.0</a></p>
</div>

<div class="flex flex-row items-center flex-wrap gap-2 mb-3 text-fg text-sm">
  {% icon "lucide:tag", class="block size-4 text-fg shrink-0" %}
  {% for tag in tags | filterTagsList %}
    <a href="/posts/tags/{{ tag | slugify }}/">{{ tag }}</a>
  {% endfor %}
</div>

<div class="flex flex-row items-center gap-2 mb-16 text-fg-dimmed text-sm">
  {% icon "lucide:calendar", class="block size-4 text-fg shrink-0" %}
  <p>Published on <span class="font-semibold text-fg">{{ date | customDateFormat }}</span></p>
</div>

{% include 'shareLinks.njk' %}
